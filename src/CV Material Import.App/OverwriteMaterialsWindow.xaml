<Window x:Class="CV_Material_Import.OverwriteMaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CV_Material_Import"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Overwrite Materials"
        Width="400"
        Height="200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Style="{StaticResource WindowStyle}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid Margin="5">
        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap">
            A Material with the name
            <TextBlock FontStyle="Italic" Text="{Binding Material}" />
            already exists in the database!
        </TextBlock>
        <CheckBox x:Name="DoForAllMaterialsCheckBox"
                  Margin="0,0,0,50"
                  VerticalAlignment="Bottom"
                  Content="Do this for all duplicate materials"
                  IsChecked="False" />
        <StackPanel Margin="0,15,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Button x:Name="OverwriteButton"
                    Margin="5"
                    Click="OverwriteButton_Click"
                    Content="Overwrite Material" />
            <Button x:Name="SkipButton"
                    Margin="5"
                    Click="SkipButton_Click"
                    Content="Skip Material" />
        </StackPanel>
    </Grid>
</Window>
